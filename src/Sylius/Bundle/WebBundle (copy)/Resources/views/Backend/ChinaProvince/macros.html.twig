{% macro list(china_provinces) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if china_provinces|length > 0 %}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.china_province.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('name', 'sylius.china_province.name'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for province in china_provinces %}
        <tr id="{{ province.id }}">
            <td>{{ province.id }}</td>
            <td><a href="{{ path('sylius_backend_china_province_show', {'id': province.id}) }}">{{ province.name }}</a></td>
            <td>
                <div class="pull-right">
                {{ buttons.edit(path('sylius_backend_china_province_update', {'id': province.id})) }}
                {{ buttons.delete(path('sylius_backend_china_province_delete', {'id': province.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.china_province.no_results'|trans) }}
{% endif %}

{% endmacro %}
