{% macro list(universities) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if universities|length > 0 %}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.university.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('name', 'sylius.university.name'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for university in universities %}
        <tr id="{{ university.id }}">
            <td>{{ university.id }}</td>
            <td><a href="{{ path('sylius_backend_university_show', {'id': university.id}) }}">{{ university.name }}</a></td>
            <td>
                <div class="pull-right">
                {{ buttons.edit(path('sylius_backend_university_update', {'id': university.id})) }}
                {{ buttons.delete(path('sylius_backend_university_delete', {'id': university.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.university.no_results'|trans) }}
{% endif %}

{% endmacro %}
