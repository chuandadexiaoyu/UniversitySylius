{% form_theme form 'SyliusWebBundle::forms.html.twig' %}

{{ form_errors(form) }}

<fieldset>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.name) }}
        </div>

        <div class="col-md-6">
            {{ form_widget(form.campuses) }}
            <a href="#" class="btn btn-success btn-block" data-collection-button="add" data-prototype="sylius_university_campuses" data-collection="sylius_university_campuses">
                {{ 'sylius.university.add_campus'|trans }}
            </a>
        </div>

    </div>
</fieldset>

<hr>
{{ form_widget(form._token) }}
